datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

//
// ENUMS EXISTENTES
//
enum UserType {
  NATURAL
  MERCHANT
  TEAM
}

enum KycStatus {
  PENDING
  APPROVED
  REJECTED
}

enum UserStatus {
  ONLINE
  OFFLINE
}

enum Asset {
  USDT
  USDC
  SMTX
}

//
// NUEVO: ROLES PARA CONTROL DE ACCESO
//
enum Role {
  USER
  MERCHANT
  SUPPORT
  ADMIN
  SUPERADMIN
}

//
// MODELS
//
model User {
  id           Int            @id @default(autoincrement())
  userId       String         @unique
  nickname     String         @unique
  email        String         @unique
  phone        String
  passwordHash String
  type         UserType       @default(NATURAL)
  kycStatus    KycStatus      @default(PENDING)
  lastSeen     DateTime       @default(now())
  status       UserStatus     @default(ONLINE)
  createdAt    DateTime       @default(now())

  // NEW: role system
  role         Role           @default(USER)

  balances     Balance[]
  wallets      UserWallet[]
  orders       Order[]
  transactions Transaction[]

  // relation con role-permission
  rolePermissions RolePermission[]
}

model Balance {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  asset     Asset
  available Decimal  @default(0) @db.Decimal(65, 30)
  locked    Decimal  @default(0) @db.Decimal(65, 30)

  @@unique([userId, asset])
}

model UserWallet {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  chain     String   @default("BSC")
  address   String   @unique
  createdAt DateTime @default(now())
}

model Order {
  id        Int       @id @default(autoincrement())
  userId    Int
  takerId   Int?
  asset     Asset
  type      String
  amount    Decimal   @db.Decimal(65, 30)
  price     Decimal   @db.Decimal(65, 30)
  status    String    @default("OPEN")
  createdAt DateTime  @default(now())
}

model Transaction {
  id        Int       @id @default(autoincrement())
  userId    Int
  asset     Asset
  amount    Decimal   @db.Decimal(65, 30)
  type      String
  createdAt DateTime  @default(now())
}

//
// NUEVOS MODELOS PARA PERMISOS AVANZADOS
//

model Permission {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now())

  rolePermissions RolePermission[]
}

model RolePermission {
  id           Int        @id @default(autoincrement())
  role         Role
  permissionId Int
  permission   Permission @relation(fields: [permissionId], references: [id])
  createdAt    DateTime   @default(now())

  userId Int?           // opcional: Ãºtil si quieres permisos por usuario
  user   User?          @relation(fields: [userId], references: [id])
}
